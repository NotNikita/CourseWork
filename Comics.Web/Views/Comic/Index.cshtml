@model IEnumerable<Comic>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow" name="ItemCard">
                        <img class="card-img-top" src="@item.Img" height="650" alt="Collection image">
                        <div class="card-body">
                            <p class="card-title">@item.Name</p>
                            <input  readonly name="ItemTagCardInput" id="@item.Id TagField" value="@item.Tags">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">View</a>
                                    @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                                    {
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a type="button" class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    }
                                </div>
                                <small class="text-muted">@item.Publisher</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <a href="@Url.Action( "Create", "Comic")">
                        <img class="card-img-top" src="http://dancesportglobal.com/wp-content/uploads/2016/09/plus-icon-27951.png" alt="Collection image">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



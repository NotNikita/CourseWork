@model Comics.Domain.Collection
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Delete"]</h1>

<h3>@Localizer["AreYouSure"]</h3>
<div class="container">
    <h4>@Html.DisplayFor(model => model.Name)</h4>
    <hr />
    <dl class="row">
        <div class="col-sm-6">
            @if (Model.Img != null)
            {
                <img width="500" height="670" src="@Model.Img">
            }
        </div>
        <div class="col-sm-6">
            <a class="font-weight-bold">@Localizer["Description"]</a>
            <div class="col-sm-6 m-4">
                @Markdown.ParseHtmlString(Model.Description)
            </div>
        </div>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" /> |
        <a asp-action="Index">@Localizer["BackToList"]</a>
    </form>
</div>

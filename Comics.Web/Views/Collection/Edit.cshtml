@model Comics.Domain.Collection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Collection</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <img src="@Model.Img" style="width:300px; height:400px;" >
            </div>
            <div class="form-group">
                <label class="control-label">Название</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Описание</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Тема</label>
                <select asp-for="Theme" class="form-control">
                    <option value="Comics">Comics</option>
                    <option value="Bikes">Bikes</option>
                    <option value="Whisky">Whisky</option>
                </select>
                <span asp-validation-for="Theme" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="uploadedImage">Изображение</label><br />
                <div class="row" style="display: flex;">
                    <div class="col-md-12">
                        <input type="hidden" asp-for="Img" class="form-control" value="@Model.Img"/>
                    </div>
                    <div class="col-lg-5">
                        <label class="input-file">
                            <input type="file" name="uploadedImage" accept=".jpg,.png,.jpeg" />
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


@model Bike
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>@Localizer["Edit"]</h1>

<h4>@Localizer["Comic"]</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <img src="@Model.Img" style="width:300px; height:400px;">
            </div>
            <div class="row">
                <div class="form-group col-md-5">
                    <label class="control-label">@Localizer["Name"]</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-5">
                    <label class="control-label">@Localizer["Producer"]</label>
                    <input asp-for="Producer" class="form-control" />
                    <span asp-validation-for="Producer" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group col-md-10">
                <label class="control-label">@Localizer["Tags"]</label>
                <input asp-for="Tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@Localizer["Description"]</label>
                <textarea hidden="hidden" asp-for="Description" id="summernote"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="uploadedImage">@Localizer["Image"]</label><br />
                <div class="row" style="display: flex;">
                    <div class="col-md-12">
                        <input type="hidden" asp-for="Img" class="form-control" value="@Model.Img" />
                    </div>
                    <div class="col-lg-5">
                        <label class="input-file">
                            <input type="file" name="uploadedImage" accept=".jpg,.png,.jpeg" />
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index">@Localizer["BackToList"]</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-bs4.js"></script>

    <script>
        $('#summernote').summernote({
            placeholder: 'Post Something....',
            tabsize: 2,
            height: 300
        });
    </script>
}

